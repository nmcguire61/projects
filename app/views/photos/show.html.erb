
<h2>
  From <%= current_user.name %>'s <%= @photo.album.try(:name) %> album.
</h2>

<h2>
  <strong>Name:</strong>
  <%= @photo.name %>
</h2>

<div class=images>
  <%= link_to image_tag(@photo.photo_image) %>
</div>

<div class=comment_section>
  <center><p>
    <%= link_to raw('<button>Comment On This Picture</button>'), new_comment_path%>
  </p></center>
</div>


<div class=bottomish>
  <%= link_to raw('<button>Edit</button>'), edit_photo_path(@photo[:id]) %>
  <%= link_to raw('<button>Album</button>'), @album %>
  <%= link_to raw('<button>Delete</button>'), @photo, method: :delete, data: { confirm: 'Are you sure?'} %>  
</div>




